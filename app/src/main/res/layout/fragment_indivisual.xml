<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    tools:context=".fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/_14dp"
                    android:text="Subject Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    app:cardCornerRadius="@dimen/margin_10"
                    app:cardElevation="@dimen/margin_5"
                    app:cardMaxElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/textsize_15">


                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:src="@drawable/male" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin_15"
                            android:layout_weight="1"
                            android:text="Subject"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsize13" />


                        <ImageView
                            android:layout_width="@dimen/margin_15"
                            android:layout_height="@dimen/textsize_15"
                            android:layout_gravity="center"
                            android:visibility="invisible"
                            android:src="@drawable/drop_down" />

                    </LinearLayout>





                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/_14dp"
                    android:text="What is the tuition Fee per hour?"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    app:cardCornerRadius="@dimen/margin_10"
                    app:cardElevation="@dimen/margin_5"
                    app:cardMaxElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">


                    <EditText
                        android:id="@+id/edt_perHr_grp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:hint="\u20B91000"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize13"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/_14dp"
                    android:text="What is the total duration in hours\nrequired to complete the Full course?"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    app:cardCornerRadius="@dimen/margin_10"
                    app:cardElevation="@dimen/margin_5"
                    app:cardMaxElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">


                    <EditText
                        android:id="@+id/edt_Complte_course_hor__grp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:hint="\u20B91000"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/textsize13"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="4"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:text="Twe Service\nCharges"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="Earning\n/hr"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="Duration in\nhours"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="Total Earning"
                        android:layout_marginRight="@dimen/margin_15"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />






                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_15"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="Hourly @ 50%"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="500"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="500"
                        android:layout_marginRight="@dimen/margin_15"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />






                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_15"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="Weekly @ 60%"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="600"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"

                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="3"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="600"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />






                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_15"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="Monthly @ 70%"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="700"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="12"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="700"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />






                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="Full Course @ 50%"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="800"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="36"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/_14dp"
                        android:text="800"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />






                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/colorGray"/>








            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_50"
                android:orientation="vertical">


                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_weight="1"
                    android:background="@drawable/dotted_bg"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="+Add a subject"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/color_txtBlue"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />


                <LinearLayout
                    android:id="@+id/lesson7Id__grp"
                    android:layout_width="@dimen/margin_280"
                    android:layout_height="@dimen/_45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edit_bgbutton"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/lesson_txt7Id__grp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

