<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBg"
    android:fitsSystemWindows="true"
    tools:context=".activity.Activity_LoginOption">

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:background="@drawable/progresh_background"
        android:elevation="6dp"
        android:padding="5dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"/>

    <com.facebook.login.widget.LoginButton
        android:visibility="gone"
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:text="  connect_with_facebook" />



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_15"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_250"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cloud" />

                    <ImageView
                        android:id="@+id/profi"
                        android:layout_width="@dimen/margin_250"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_70"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo_fill" />


                </RelativeLayout>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_30"
                android:gravity="center"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/image_details"
                    android:layout_width="410dp"
                    android:layout_height="370dp"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/margin_15"
                    android:src="@drawable/card">
                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_45"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome To"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/margin_20"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Dummy text is text that is used\nin the publishing industry\nor by web designers "
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="@dimen/margin_10"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_12" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/margin_200"
                            android:layout_height="45dp"
                            android:onClick="continueEmailInit"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_20"
                            app:cardBackgroundColor="@color/color_txtBlue"
                            app:cardCornerRadius="8dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="10dp"
                                    android:adjustViewBounds="true"
                                    android:padding="4dp"
                                    android:layout_marginTop="@dimen/margin_8"
                                    android:gravity="center_horizontal"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/mail" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Conitinue with Email"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_20"
                            app:cardBackgroundColor="@color/fb_blue"
                            app:cardCornerRadius="8dp">

                            <RelativeLayout
                                android:id="@+id/RR_loign_faceBook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:adjustViewBounds="true"
                                    android:padding="4dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/facebook" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Login with Facebook"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="13sp" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_20"
                            app:cardBackgroundColor="@color/google_colour"
                            app:cardCornerRadius="8dp">

                            <RelativeLayout
                                android:id="@+id/RR_google"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:adjustViewBounds="true"
                                    android:padding="4dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/googleplus" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="center_horizontal"
                                    android:padding="10dp"
                                    android:text="Login with Google"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="13sp" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>














                </LinearLayout>





            </RelativeLayout>






        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>