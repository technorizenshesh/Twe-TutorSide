                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:src="@drawable/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageView>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/img_certi_three"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:src="@drawable/logo"
