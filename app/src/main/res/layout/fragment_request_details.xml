<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RequestDetailsActivity">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_80"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:src="@color/color_txtBlue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_backRequestDetatils"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/back"
                        android:visibility="visible"
                        app:tint="@color/colorWhite" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Request Details"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_20"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="$8426"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/margin_15"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        tools:ignore="RtlCompat" />


                </LinearLayout>


            </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/margin_50"
                        android:layout_height="@dimen/margin_50"
                        android:scaleType="fitXY"
                        android:src="@drawable/tutor_profi" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/margin_20"
                                    android:text="Neil Woods"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/textsize14"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="   24Years"
                                    android:textColor="@color/colorGray"
                                    android:textSize="@dimen/textsize13"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/margin_20"
                                    android:text="Order: 1546897562"
                                    android:textColor="@color/colorGray"
                                    android:textSize="@dimen/textsize14"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/margin_50"
                            android:layout_height="@dimen/margin_50"
                            android:scaleType="fitXY"
                            android:src="@drawable/londaa" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/margin_20"
                                        android:text="Justin Ford"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/textsize_16"
                                        android:textStyle="bold" />




                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:orientation="horizontal">


                                    <ImageView
                                        android:layout_width="@dimen/margin_25"
                                        android:layout_height="@dimen/margin_25"
                                        android:layout_gravity="center"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/chat_pupy" />

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/margin_30"
                            android:layout_height="@dimen/margin_30"
                            android:layout_marginLeft="@dimen/margin_12"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_location" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20"
                            android:text="3539 Hill Haven Drive Tacoma, WA 98402"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/textsize14"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/margin_18"
                            android:layout_height="@dimen/margin_18"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_19"
                            android:src="@drawable/time" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20"
                            android:text="  Time: 9:30am"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/textsize14"
                            android:textStyle="bold" />





                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20"
                            android:text="  Date: 10/07/2019"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/textsize14"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/margin_18"
                            android:layout_height="@dimen/margin_18"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_19"
                            android:src="@drawable/ic_call1" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20"
                            android:text="  Time: 9:30am"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/textsize14"
                            android:textStyle="bold" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/margin_20"
                            android:text="  Date: 10/07/2019"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/textsize14"
                            android:textStyle="bold" />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/margin_15"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/req_detailsViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_20"
                            android:text="View Details"
                            android:textAllCaps="true"
                            android:textColor="@color/color_txtPurple"
                            android:textSize="@dimen/textsize14"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_10"
                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="@dimen/margin_15"
                                    android:layout_height="@dimen/margin_15"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/cash_new" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="\u20B910"
                                    android:textColor="@color/colorGreen"
                                    android:textSize="@dimen/textsize14"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_10"
                                android:orientation="horizontal">

                                <RatingBar
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:progressTint="@color/color_yellow"
                                    android:rating="4" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="{5.0} 545"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/textsize14"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_16"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/lorem_ipsum"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_15" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_90"
                        android:layout_height="@dimen/margin_90"
                        android:src="@drawable/d1" />

                    <ImageView
                        android:layout_width="@dimen/margin_90"
                        android:layout_height="@dimen/margin_90"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:src="@drawable/d2" />


                    <ImageView
                        android:layout_width="@dimen/margin_90"
                        android:layout_height="@dimen/margin_90"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:src="@drawable/d3" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:text="+1 More"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/view_InvoiceId"
                    android:layout_width="@dimen/margin_280"
                    android:layout_height="@dimen/_45dp"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_bgbutton"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/View_txtInvoiceId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Invoice"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

        </LinearLayout>


</RelativeLayout>