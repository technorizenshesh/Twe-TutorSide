<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RequestFragment">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80"
        android:scaleType="fitXY"
        android:fitsSystemWindows="true"
        android:src="@color/color_txtBlue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_backRequest"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/back"
                android:visibility="visible"
                app:tint="@color/colorWhite" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Request"
                android:gravity="start"
                android:layout_marginLeft="@dimen/margin_15"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="$8426"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/margin_15"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:ignore="RtlCompat" />


        </LinearLayout>




    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_txtBlue"
            android:orientation="horizontal">



            <TextView
                android:layout_width="@dimen/margin_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Active"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/scheduledId"
                android:layout_width="@dimen/margin_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Scheduled"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_16"
                android:textStyle="bold"
                android:visibility="visible" />



            <TextView
                android:id="@+id/completedId"
                android:layout_width="@dimen/margin_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Completed"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/CancelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Canceled"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_15"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_16"
                android:textStyle="bold"
                android:visibility="gone" />










        </LinearLayout>





        <FrameLayout
            android:id="@+id/frameContainerRequest"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?android:windowBackground"
            android:layout_weight="1" />



    </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>