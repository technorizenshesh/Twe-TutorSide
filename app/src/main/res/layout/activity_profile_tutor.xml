<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    >

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:background="@drawable/progresh_background"
        android:elevation="6dp"
        android:padding="5dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_50"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="@dimen/_10sdp"
                        android:id="@+id/iv_back"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/back" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_20"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <ImageView
                        android:layout_width="@dimen/_45dp"
                        android:layout_height="@dimen/_45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_2"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/margin_5"
                        android:scaleType="fitCenter" />


                    <ImageView
                        android:visibility="gone"
                        android:layout_width="@dimen/margin_40"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:adjustViewBounds="true"
                        android:onClick="call_Video"
                        android:scaleType="fitCenter"
                        android:src="@drawable/call1" />


                    <ImageView
                        android:visibility="gone"
                        android:layout_width="@dimen/margin_40"
                        android:layout_height="@dimen/margin_40"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/msg" />


                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/margin_150"
                    android:layout_height="@dimen/margin_150"
                    android:id="@+id/profile_img"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="@drawable/home_banner3" />

                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/margin_110"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_130"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/available" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_15"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_10">


                <TextView
                    android:id="@+id/txt_tutor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30"
                    android:gravity="center"
                    android:text="Olivia Parker"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_20"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/MyRating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="@color/color_yellow"
                        android:rating="5"
                        android:stepSize="0.1" />


                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:gravity="center"
                        android:text="5.0(44)"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_year_count"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center"
                        android:text="00 years"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textsize14" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="@dimen/padding_8"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_22"
                        android:src="@drawable/bg_point_circle" />


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center"
                        android:text="2Km away"
                        android:textColor="@color/edit_darkBlue"
                        android:textSize="@dimen/textsize14" />


                    <ImageView
                        android:layout_width="@dimen/padding_8"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_22"
                        android:src="@drawable/bg_point_circle" />


                    <TextView
                        android:id="@+id/txt_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_25"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center"
                        android:text="Female"
                        android:textColor="@color/edit_darkBlue"
                        android:textSize="@dimen/textsize14" />


                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_payment_per_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="\u20B9750"
                    android:textColor="@color/color_txtBlue"
                    android:textSize="@dimen/textsize_20"
                    android:textStyle="bold"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_15"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Information"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_abouts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textsize_16" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:layout_marginRight="@dimen/margin_5"
                            android:text="Read More"
                            android:textColor="@color/red"
                            android:textSize="@dimen/textsize_15"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Location"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/margin_25"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pin"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:gravity="center"
                        android:text="Brooklyn, New York, USA"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_20"
                        android:textStyle="bold" />


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_250"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal"
                            android:padding="@dimen/margin_5"
                            android:src="@drawable/map_file" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/margin_80"
                                android:layout_height="@dimen/margin_80"
                                android:onClick="MapOpenInit"
                                android:padding="@dimen/margin_10"
                                android:src="@drawable/yellow_map" />


                        </LinearLayout>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="PortFoliyo"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_5"
                    android:onClick="PhotoGalleryInit"
                    android:text="View All"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_15" />

            </RelativeLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_250"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="PhotoGalleryInit"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="PhotoGalleryInit"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/margin_170"
                        android:layout_height="@dimen/margin_170"
                        android:onClick="PhotoGalleryInit"
                        android:src="@drawable/new_bg"
                        app:riv_corner_radius="@dimen/margin_10" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="PhotoGalleryInit"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="PhotoGalleryInit"
                        android:orientation="horizontal">


                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/margin_80"
                            android:layout_height="@dimen/margin_80"
                            android:onClick="PhotoGalleryInit"
                            android:src="@drawable/new_bg"
                            app:riv_corner_radius="@dimen/margin_10" />


                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/margin_80"
                            android:layout_height="@dimen/margin_80"
                            android:onClick="PhotoGalleryInit"
                            android:src="@drawable/new_bg"
                            app:riv_corner_radius="@dimen/margin_10" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15"
                        android:onClick="PhotoGalleryInit"
                        android:orientation="horizontal">


                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/margin_80"
                            android:layout_height="@dimen/margin_80"
                            android:onClick="PhotoGalleryInit"
                            android:src="@drawable/new_bg"
                            app:riv_corner_radius="@dimen/margin_10" />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/margin_80"
                            android:layout_height="@dimen/margin_80"
                            android:onClick="PhotoGalleryInit"
                            android:src="@drawable/new_bg"
                            app:riv_corner_radius="@dimen/margin_10" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:orientation="horizontal"
                android:padding="@dimen/textsize_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text="Experience"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />

                <TextView
                    android:id="@+id/txt_Experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />


                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/textsize_15"
                    android:layout_gravity="center"
                    android:src="@drawable/drop_down" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:orientation="horizontal"
                android:padding="@dimen/textsize_15">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text="Education"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />

     <TextView
         android:id="@+id/txt_Education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />


                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/textsize_15"
                    android:layout_gravity="center"
                    android:src="@drawable/drop_down" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:orientation="horizontal"
                android:padding="@dimen/textsize_15">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text="Language"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />

 <TextView
     android:id="@+id/txt_Language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />


                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/textsize_15"
                    android:layout_gravity="center"
                    android:src="@drawable/drop_down" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:orientation="horizontal"
                android:padding="@dimen/textsize_15">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text="Certification"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />

                <TextView
                    android:id="@+id/txt_Certification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />


                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/textsize_15"
                    android:layout_gravity="center"
                    android:src="@drawable/drop_down" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:orientation="horizontal"
                android:padding="@dimen/textsize_15">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text="Affilation"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />

                <TextView
                    android:id="@+id/txt_Affilation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14dp" />


                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/textsize_15"
                    android:layout_gravity="center"
                    android:src="@drawable/drop_down" />

            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Review"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textsize_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seeall_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="View All"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_15" />

            </RelativeLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/men" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:layout_weight="1"
                                android:orientation="vertical">



                                <LinearLayout
                                    android:layout_width="match_parent"
