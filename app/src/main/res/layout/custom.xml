<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_25"
        android:background="@drawable/bg_police_dialog"
        android:layout_margin="@dimen/margin_10"
        android:padding="@dimen/margin_20"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/dialog_cancel_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:src="@drawable/ic_baseline_clear_24"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have a police verification\ncertificate? Don't worry\nTWE will get it done"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_16" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Legal"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_gravity="center"
            android:gravity="start"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_20" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/policee"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="start"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize14" />

        <LinearLayout
            android:id="@+id/police_AgreeId"
            android:layout_width="@dimen/margin_280"
            android:layout_height="@dimen/_45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/edit_bgbutton"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/police_txtAgreeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Agree"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        </LinearLayout>


</androidx.core.widget.NestedScrollView>



    </LinearLayout>





</RelativeLayout>